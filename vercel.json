{
  "version": 2,
  "builds": [
    { "src": "client", "use": "@vercel/static-build" },
    {
      "src": "server/dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/dist/index.js" },
    { "source": "(.*)", "destination": "/client" }
  ]
}
